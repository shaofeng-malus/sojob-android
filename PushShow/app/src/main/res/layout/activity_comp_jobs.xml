<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:topBar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <com.malus.pushshow.widget.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/topic"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        topBar:leftButton_src="@mipmap/arrow_left_white"
        topBar:leftButton_width="@dimen/topbar_button_width"
        topBar:leftText_color="@color/white"
        topBar:leftText_size="@dimen/topbar_button_text_size"
        topBar:rightButton_width="@dimen/topbar_button_width"
        topBar:rightText_color="@color/white"
        topBar:rightText_size="@dimen/topbar_button_text_size"
        topBar:text="该公司所有职位"
        topBar:text_color="@color/white"
        topBar:text_size="@dimen/topbar_text_size" />
    <com.malus.pushshow.widget.XListView
        android:id="@+id/comp_jobs_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp">

    </com.malus.pushshow.widget.XListView>
    <com.malus.pushshow.widget.LoadingView
        android:id="@+id/loadView"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"/>
</LinearLayout>
