<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/search_search_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_search_top_n_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_edit_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_search_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="全国"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <EditText
            android:id="@+id/search_search_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/search_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/abc_ic_search" />
    </LinearLayout>

        <com.malus.pushshow.widget.XListView
            android:id="@+id/search_search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_below="@id/search_search_image"
            android:dividerHeight="0dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_search_image"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_search_top_n_2" />

</RelativeLayout>
