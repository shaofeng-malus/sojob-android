<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray_bg_common"
    android:layout_height="match_parent"
    tools:context="com.malus.pushshow.fragment.job.interview.InterviewFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/common_padding"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comp_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_color_large"
                    android:text="公司名字" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="6dp"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color_small"
                        android:text="行业"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/comp_detail_indtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color_medium"
                        android:text="计算机软件"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="6dp"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_color_small"
                            android:text="性质"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/comp_detail_property"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_color_medium"
                            android:text="民营公司"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="6dp"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_color_small"
                            android:text="规模"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/comp_detail_scope"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_color_medium"
                            android:text="50-150人"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="6dp"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color_small"
                        android:text="公司地址"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/comp_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color_medium"
                        android:text="厦门"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_1"
                />
            <LinearLayout
                android:id="@+id/comp_detail_jobs"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="@dimen/common_padding"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_medium"
                    android:text="该公司所有职位"
                    android:layout_marginRight="6dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right_icon"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/bg_1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/common_padding"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="公司介绍"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_small"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/comp_detail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_medium"
                    android:text="厦门"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.malus.pushshow.widget.LoadingView
        android:id="@+id/loadView"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"/>
</FrameLayout>
