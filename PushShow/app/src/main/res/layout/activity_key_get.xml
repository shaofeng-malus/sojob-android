<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/search_edit_bg_1"
            android:layout_marginRight="10dp"
            android:hint="请输入关键字"
            android:padding="6dp"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_color_medium"
            android:textColorHint="@color/text_color_small"
            android:drawableLeft="@mipmap/abc_ic_search"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/topic"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/bg_2"
        android:layout_height="1dp"/>
    <RadioGroup
        android:id="@+id/detail_radio_group"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/key_get_rbt_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/vod_tab_indicator"
            android:textSize="@dimen/text_size_micro"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="职位信息"
            android:textColor="@color/detail_info_radio_text_style" />

        <RadioButton
            android:id="@+id/key_get_rbt_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vod_tab_indicator"
            android:button="@null"
            android:textSize="@dimen/text_size_micro"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="公司信息"
            android:textColor="@color/detail_info_radio_text_style" />
        <RadioButton
            android:id="@+id/key_get_rbt_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vod_tab_indicator"
            android:button="@null"
            android:textSize="@dimen/text_size_micro"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="公司信息"
            android:textColor="@color/detail_info_radio_text_style" />
    </RadioGroup>

</LinearLayout>
