<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/job_list_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:id="@+id/job_list_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2小时前"
            android:textColor="@color/text_color_micro"
            android:textSize="@dimen/text_size_mmmicro" />

        <TextView
            android:id="@+id/job_list_item_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="薪资"
            android:textColor="@color/topic"
            android:textSize="@dimen/text_size_mmmicro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/job_list_item_icon"
        android:layout_toLeftOf="@id/job_list_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_list_item_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位"
            android:textColor="@color/text_color_medium"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_list_item_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="公司"
            android:textColor="@color/text_color_medium"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:textColor="@color/text_color_large">

            <TextView
                android:id="@+id/job_list_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textColor="@color/text_color_micro"
                android:textSize="@dimen/text_size_mmmicro" />

            <TextView
                android:id="@+id/job_list_item_edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="学历"
                android:textColor="@color/text_color_micro"
                android:textSize="@dimen/text_size_mmmicro" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_bg_small"
        />
</RelativeLayout>